<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewOperationWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="right|center"
        android:textColor="@color/white"
        android:textSize="80sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonBackSpace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded" />


    <LinearLayout
        android:id="@+id/linearLayoutMain"
        android:layout_width="403dp"
        android:layout_height="381dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewOperationWindow">

            <Button
                android:id="@+id/buttonSeven"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="seven"
                android:text="@string/seven"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="298dp"
                tools:layout_editor_absoluteY="288dp" />

            <Button
                android:id="@+id/buttonFour"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="four"
                android:text="@string/four"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="298dp"
                tools:layout_editor_absoluteY="288dp" />

            <Button
                android:id="@+id/buttonOne"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="one"
                android:text="@string/one"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="298dp"
                tools:layout_editor_absoluteY="288dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewOperationWindow">


            <Button
                android:id="@+id/buttonEight"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="eight"
                android:text="@string/eight"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="298dp"
                tools:layout_editor_absoluteY="288dp" />

            <Button
                android:id="@+id/buttonFive"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="five"
                android:text="@string/five"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="298dp"
                tools:layout_editor_absoluteY="288dp" />

            <Button
                android:id="@+id/buttonTwo"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="two"
                android:text="@string/two"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="298dp"
                tools:layout_editor_absoluteY="288dp" />

            <Button
                android:id="@+id/buttonZero"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="zero"
                android:text="@string/zero"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="298dp"
                tools:layout_editor_absoluteY="288dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewOperationWindow">

            <Button
                android:id="@+id/buttonNine"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="nine"
                android:text="@string/nine"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="298dp"
                tools:layout_editor_absoluteY="288dp" />

            <Button
                android:id="@+id/buttonSix"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="six"
                android:text="@string/six"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="298dp"
                tools:layout_editor_absoluteY="288dp" />

            <Button
                android:id="@+id/buttonThree"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="three"
                android:text="@string/three"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="298dp"
                tools:layout_editor_absoluteY="288dp" />

            <Button
                android:id="@+id/buttonEquals"
                android:layout_width="75dp"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="equal"
                android:text="@string/equal"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="298dp"
                tools:layout_editor_absoluteY="288dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewOperationWindow">

            <Button
                android:id="@+id/buttonDivision"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="division"
                android:text="@string/division"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="298dp"
                tools:layout_editor_absoluteY="288dp" />

            <Button
                android:id="@+id/buttonMultiplication"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="multiplication"
                android:text="@string/multiplication"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="298dp"
                tools:layout_editor_absoluteY="288dp" />

            <Button
                android:id="@+id/buttonSubtraction"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="subtraction"
                android:text="@string/subtraction"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="298dp"
                tools:layout_editor_absoluteY="288dp" />

            <Button
                android:id="@+id/buttonAddition"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="addition"
                android:text="@string/addition"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="298dp"
                tools:layout_editor_absoluteY="288dp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonBackSpace"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="backSpace"
        android:text="@string/delete"
        app:icon="@android:drawable/ic_input_delete"
        app:iconGravity="end"
        app:iconSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutMain"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>